%div{:class=>'margint10 marginb10 marginl10'}

  .maprankbg.fleft.marginr5
    .t RANK
    .rank
      =mindmap.rank

  #mindmap-logo.fleft.marginr10.relative
    =link_to(logo(mindmap),mindmap,:class=>'fleft',:target=>'_blank')
    -if mindmap.private
      .private-mark

  #mindmap-meta
    %h4.normal
      #{userlink(mindmap)}：<b>#{link_to truncate_u(mindmap.title,23),mindmap,:target=>'_blank',:title=>mindmap.title}</b>
     
  %div.clearfix
    #mindmap-datetime.fleft
      = show_time_by_order_type @order,mindmap
    #mindmap-operations.fright
      -if current_user && mindmap.user_id == current_user.id
        - class_hide_private = (mindmap.private? ? "private-mark-link" : "not-private-mark-link")
        
        = link_to_remote "",:url=>"/#{APP_PREFIX}/mindmaps/#{mindmap.id}/toggle_private",:method=>:put,:success=>"change_lock(#{mindmap.id})",:html=>{:class=>"#{class_hide_private} fleft",:id=>"link_lock_#{mindmap.id}"}
        |
        %span
          = link_to '编辑', edit_mindmap_path(mindmap),:target=>'_blank'
        %span.line
          |
        %span
          %mp:li-remove{:remote_url=>"/mindmaps/#{mindmap.id}",:li_id=>"mindmap_#{mindmap.id}",:confirm=>"确认删除？"} 删除
        %span.line
          |
        %span
          = render :partial=>'mindmaps/edit/box_params_edit',:locals=>{:mindmap=>mindmap}
        %span.line
          |
        %span
          = render :partial=>'mindmaps/edit/box_export',:locals=>{:mindmap=>mindmap}
        %span.line
          |
        %span
          = render :partial=>'mindmaps/edit/box_clone',:locals=>{:mindmap=>mindmap}

